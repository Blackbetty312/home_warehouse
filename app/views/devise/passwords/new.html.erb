<div class="container bootstrap">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="bg-slate-50 dark:bg-gray-700 card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header">
          <h2 class="text-center font-weight-light my-4">Forgot your password?</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-floating mb-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: 'inputEmail' %>
              <label for="inputEmail">Email</label>
            </div>
            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
              <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center py-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
